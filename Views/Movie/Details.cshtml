@model Movie

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <img src="@Model.Poster" />
    <div>
        <input type="button" value="Remove" onclick="location.href='@Url.Action("Remove", "Movie")?movieId=@Model.Id'" />
        <input type="button" value="Generate Image" onclick="location.href='@Url.Action("ImageAI", "Movie")?movieId=@Model.Id'" />
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Genre
        </dt>
        <dd class="col-sm-10">
            @Model.Genre
        </dd>
        <dt class="col-sm-2">
            Runtime
        </dt>
        <dd class="col-sm-10">
            @Model.Runtime
        </dd>
        <dt class="col-sm-2">
            Released
        </dt>
        <dd class="col-sm-10">
            @Model.Year
        </dd>
        <dt class="col-sm-2">
            Plot
        </dt>
        <dd class="col-sm-10">
            @Model.Plot
        </dd>
        <dt class="col-sm-2">
            Director
        </dt>
        <dd class="col-sm-10">
            @Model.Director
        </dd>
        <dt class="col-sm-2">
            Writer
        </dt>
        <dd class="col-sm-10">
            @Model.Writer
        </dd>
        <dt class="col-sm-2">
            Actors
        </dt>
        <dd class="col-sm-10">
            @Model.Actors
        </dd>
        <dt class="col-sm-2">
            Awards
        </dt>
        <dd class="col-sm-10">
            @Model.Awards
        </dd>
        <dt class="col-sm-2">
            Ratings
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var rating in Model.Ratings)
                {
                    <li>
                        @rating.Source: @rating.Value;
                    </li>
                }
            </ul>
        </dd>
        <h2>Streaming options</h2>
        <dt class="col-sm-2">
            Streaming Services
        </dt>
        <dd class="col-sm-10">
            <ul>
                @if (Model.StreamingServices != null)
                {
                    @foreach (var stream in Model.StreamingServices)
                    {
                        <li>
                            @stream.ServiceName.ToUpper(), @stream.Type, @stream.Link, @stream.Price
                        </li>
                    }
                }
                else
                {
                    <li>No streaming options found</li>
                }

            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
